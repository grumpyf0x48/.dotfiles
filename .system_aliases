#!/usr/bin/env bash

export EDITOR=vi
export HISTTIMEFORMAT='%F %T'

alias update='sudo apt update && sudo apt full-upgrade'

function canonical_which() {
    if [ "$1" = "-a" ]; then
        \which -a "$2"
    else
        readlink -e "$(command v "$1")"
    fi
}
alias which='canonical_which'

if command -v batcat; then
    alias bat='batcat'
fi
